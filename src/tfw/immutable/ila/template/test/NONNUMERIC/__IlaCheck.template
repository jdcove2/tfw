                        }
                        ila.toArray(four, offset, start, length);
                        ila.toArray(five, offset, 1, start, length);
                        for(int ii = 0; ii < length; ++ii)
                        {
                            if(!(four[ii]
                                 %%IS_EQUALS_START%%five[ii]%%IS_EQUALS_END%%))
                                throw new Exception("four[" + ii + "] ("
                                                    + four[ii] + ") !~ five["
                                                    + ii + "] ("
                                                    + five[ii]
                                                    + ") {length=" + length
                                                    + ",start=" + start
                                                    + ",offset=" + offset
                                                    + "}");
                        }
                    }
